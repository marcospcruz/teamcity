<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="5af9ffb5-d3a0-4e11-8ffa-e10ccbf63949" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>Step.2 - NPM Build</name>
  <description />
  <settings>
    <options>
      <option name="artifactRules" value="+:*.tar.gz =&gt; target_directory" />
    </options>
    <parameters />
    <build-runners>
      <runner id="RUNNER_15" name="Install Node js" type="jonnyzzz.nvm">
        <parameters>
          <param name="teamcity.step.mode" value="default" />
          <param name="version" value="%NODE_VERSION%" />
        </parameters>
      </runner>
      <runner id="RUNNER_2" name="" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[set -e
tar -xzf node_modules.tar.gz
npm install -g @angular/cli@%ANGULAR_VERSION%]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_14" name="run build" type="jonnyzzz.npm">
        <parameters>
          <param name="npm_commands" value="run build" />
          <param name="npm_execution_args" value="--configuration=production" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
      <runner id="RUNNER_17" name="Compact node_modules directory" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[cd %teamcity.build.workingDir%
tar -czf dist.tar.gz]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="ApuracaoPleitoAngular_GitGithubComMarcospcruzApuracaoPleitoAngularGitRefsHeadsMaster" />
    </vcs-settings>
    <requirements />
    <build-triggers />
    <artifact-dependencies>
      <dependency id="ARTIFACT_DEPENDENCY_2" sourceBuildTypeId="ApuracaoPleitoAngular_NpmInstall" cleanDestination="false">
        <revisionRule name="sameChainOrLastFinished" revision="latest.sameChainOrLastFinished" />
        <artifact sourcePath="+:target_directory/node_modules.tar.gz =&gt;  %teamcity.build.workingDir%" />
      </dependency>
    </artifact-dependencies>
    <dependencies>
      <depend-on sourceBuildTypeId="ApuracaoPleitoAngular_NpmInstall">
        <options>
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

