<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="a4e4a341-a101-4be0-a0dd-5ff51fb7f1ce" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>Generate Bundles</name>
  <description />
  <settings>
    <options>
      <option name="allowExternalStatus" value="true" />
      <option name="artifactRules" value="+:dist =&gt; ." />
      <option name="cleanBuild" value="true" />
      <option name="excludeDefaultBranchChanges" value="true" />
      <option name="showDependenciesChanges" value="true" />
    </options>
    <parameters />
    <build-runners>
      <runner id="RUNNER_17" name="check node js" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[if [ -z "$(which node)" ]; then
	apt update
	apt install nodejs npm -y
fi
node -v
npm -v]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_47" name="Untar archive" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[mv diagrams-app.tgz ../ -v
tar -xzf ../diagrams-app.tgz 
ls -l]]></param>
          <param name="teamcity.build.workingDir" value="diagrams-app" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_34" name="npm run build" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[export NODE_OPTIONS=--max_old_space_size=768
echo "Memory args: ${NODE_OPTIONS}"
#ng version
echo
npm run build]]></param>
          <param name="teamcity.build.workingDir" value="diagrams-app" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="DiagramsApp_Any">
        <checkout-rule rule="+:. =&gt; diagrams-app" />
      </vcs-entry-ref>
    </vcs-settings>
    <requirements>
      <equals id="RQ_7" name="teamcity.agent.name" value="ip_10.244.0.1" />
    </requirements>
    <build-triggers>
      <build-trigger id="TRIGGER_21" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:refs/heads/feature/*" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <build-extensions>
      <extension id="perfmon" type="perfmon">
        <parameters>
          <param name="teamcity.perfmon.feature.enabled" value="true" />
        </parameters>
      </extension>
      <extension id="BUILD_EXT_14" type="commit-status-publisher">
        <parameters>
          <param name="authType" value="storedToken" />
          <param name="publisherId" value="bitbucketCloudPublisher" />
          <param name="tokenId" value="tc_token_id:CID_6ce5524be59288dac8dd0f7240a1e470:1:dc70f852-a99e-4347-9003-5e46ae31a01a" />
          <param name="vcsRootId" value="DiagramsApp_Any" />
        </parameters>
      </extension>
    </build-extensions>
    <artifact-dependencies>
      <dependency id="ARTIFACT_DEPENDENCY_4" sourceBuildTypeId="DiagramsApp_Build_2" cleanDestination="true">
        <revisionRule name="sameChainOrLastFinished" revision="latest.sameChainOrLastFinished" />
        <artifact sourcePath="+:diagrams-app.tgz =&gt; ." />
      </dependency>
    </artifact-dependencies>
    <dependencies>
      <depend-on sourceBuildTypeId="DiagramsApp_Build_2">
        <options>
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
      <depend-on sourceBuildTypeId="DiagramsApp_Build_5">
        <options>
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
