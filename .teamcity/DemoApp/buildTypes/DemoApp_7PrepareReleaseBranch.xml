<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="85749dfb-e3b9-4a86-8fcc-eeb7904983d4" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>7.Prepare Release Branch</name>
  <description />
  <settings>
    <parameters />
    <build-runners>
      <runner id="RUNNER_32" name="check user" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[AUTHOR=$( git log --oneline --pretty="%ae"|head -1)
echo commit author is $AUTHOR
echo "##teamcity[setParameter name='COMMIT.author' value='${AUTHOR}']"]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_29" name="get latest release candidate tag" type="simpleRunner">
        <conditions>
          <contains name="COMMIT.author" value="root" />
        </conditions>
        <parameters>
          <param name="script.content"><![CDATA[git remote set-url origin https://%vcsroot.username%:%bitbucket-token%@bitbucket.org/marcospcruz/demo-app.git
git remote -v
git fetch --verbose
#LATEST_RC_TAG=$(git tag|grep demo-app | tail -1|sed -r 's/(\w+\-)//g')
LATEST_RC_TAG=$(git describe --tags $(git rev-list --tags --max-count=1))
git fetch --verbose
ls -la
[ -f $(pwd)/release.branch ] \
	&& echo WARNING: $(pwd)/release.branch not found \
    && exit 0
RELEASE_BRANCH=$(cat release.branch)
git checkout golden-source
git ls-remote --exit-code --heads origin $RELEASE_BRANCH
if [ 2 -eq $? ];then
	git checkout -b $RELEASE_BRANCH
else
	git checkout $RELEASE_BRANCH
    git pull origin $RELEASE_BRANCH --verbose
fi
git rebase $LATEST_RC_TAG
git push origin $RELEASE_BRANCH]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="DemoApp_TagsDemoApp" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="TRIGGER_16" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:*" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <build-extensions>
      <extension id="perfmon" type="perfmon">
        <parameters>
          <param name="teamcity.perfmon.feature.enabled" value="true" />
        </parameters>
      </extension>
    </build-extensions>
    <dependencies>
      <depend-on sourceBuildTypeId="DemoApp_4Vulnerabilities">
        <options>
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

