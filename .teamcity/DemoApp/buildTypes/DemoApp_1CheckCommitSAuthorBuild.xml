<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="f00ed53d-1543-49a4-8d89-14acdd39f3ec" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>1.Check Commit''s Author Build</name>
  <description />
  <settings>
    <options>
      <option name="excludeDefaultBranchChanges" value="true" />
    </options>
    <disabled-settings>
      <setting-ref ref="RUNNER_28" />
    </disabled-settings>
    <parameters />
    <build-runners>
      <runner id="RUNNER_28" name="check user" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[AUTHOR=$( git log --oneline --pretty="%ae"|head -1)
echo commit author is $AUTHOR
echo "##teamcity[setParameter name='COMMIT.author' value='${AUTHOR}']"]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_44" name="get commit details" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[AUTHOR=$(git log --oneline --pretty="%ae"|head -1)
echo commit author is $AUTHOR
CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)
CURRENT_BRANCH_TYPE=$(echo $CURRENT_BRANCH|cut -d/ -f1)
case "${CURRENT_BRANCH_TYPE}" in
    "feature" ) 
    	TARGET_BRANCH="develop" 
        ;;
	*)	
        echo "ERROR: Invalid branch type"
        exit 1
        ;;
esac

echo "source branch: $CURRENT_BRANCH"
echo "target branch: $TARGET_BRANCH"

echo "##teamcity[setParameter name='git.branch.source' value='refs/heads/${CURRENT_BRANCH}']"
echo "##teamcity[setParameter name='git.branch.target' value='refs/heads/${TARGET_BRANCH}']"
echo "##teamcity[setParameter name='COMMIT.author' value='${AUTHOR}']"]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="DemoApp_FeatureBugfix" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="TRIGGER_15" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:*" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <build-extensions>
      <extension id="perfmon" type="perfmon">
        <parameters>
          <param name="teamcity.perfmon.feature.enabled" value="true" />
        </parameters>
      </extension>
    </build-extensions>
    <cleanup />
  </settings>
</build-type>

