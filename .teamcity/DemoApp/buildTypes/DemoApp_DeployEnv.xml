<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="3d9c2bcd-50f5-458a-9f79-eb52d20aaf43" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>deploy env</name>
  <description />
  <settings>
    <options>
      <option name="allowPersonalBuildTriggering" value="false" />
      <option name="artifactRules" value="+:*.log =&gt; ." />
      <option name="branchFilter" value="-:refs/heads/master&#xD;&#xA;+:*" />
      <option name="buildConfigurationType" value="DEPLOYMENT" />
      <option name="maximumNumberOfBuilds" value="1" />
    </options>
    <parameters />
    <build-runners>
      <runner id="RUNNER_18" name="Get Release Information" type="Maven2">
        <parameters>
          <param name="goals" value="-q -Dexec.executable=echo -Dexec.args='${project.groupId}:${project.artifactId}:${project.version}' --non-recursive exec:exec" />
          <param name="localRepoScope" value="agent" />
          <param name="maven.path" value="%teamcity.tool.maven.DEFAULT%" />
          <param name="pomLocation" value="pom.xml" />
          <param name="runnerArgs" value="--log-file pom-info.log" />
          <param name="teamcity.coverage.emma.include.source" value="true" />
          <param name="teamcity.coverage.emma.instr.parameters" value="-ix -*Test*" />
          <param name="teamcity.coverage.idea.includePatterns" value="*" />
          <param name="teamcity.coverage.jacoco.patterns" value="+:*" />
          <param name="teamcity.step.mode" value="default" />
          <param name="teamcity.tool.jacoco" value="%teamcity.tool.jacoco.DEFAULT%" />
          <param name="userSettingsSelection" value="userSettingsSelection:default" />
        </parameters>
      </runner>
      <runner id="RUNNER_19" name="Reading pom info from log" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[function get_pom_info(){
	cat pom-info.log|grep -v '\['|cut -d: -f$1
}
echo
cat pom-info.log
echo
GROUP_ID=$(get_pom_info 1)
ARTIFACT_ID=$(get_pom_info 2)
VERSION=$(get_pom_info 3)

echo "project release pom.xml info: group_id: $GROUP_ID artifact_id: $ARTIFACT_ID version: $VERSION"



CHART_TEMPLATE_VALUES=charts/${ARTIFACT_ID}/values.yaml

echo "repository: \"release\"" >${CHART_TEMPLATE_VALUES}
echo "group_id: \"${GROUP_ID}\"" >>${CHART_TEMPLATE_VALUES}
echo "version: \"${VERSION}\"" >>${CHART_TEMPLATE_VALUES}
echo "artifact_id: \"${ARTIFACT_ID}\"" >>${CHART_TEMPLATE_VALUES}


echo "chart template values created on ${CHART_TEMPLATE_VALUES}:"
cat ${CHART_TEMPLATE_VALUES}]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="DemoApp_Tags" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="TRIGGER_22" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:*" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <cleanup />
  </settings>
</build-type>

