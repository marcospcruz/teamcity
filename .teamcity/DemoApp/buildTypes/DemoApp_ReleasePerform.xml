    <parameters />
    <build-runners>
      <runner id="RUNNER_33" name="get user" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[AUTHOR=$(git log -1 --pretty=format:'%ae')
echo "##teamcity[setParameter='COMMIT.author' value='${AUTHOR}'"]]></param>
          <param name="teamcity.step.mode" value="default" />
