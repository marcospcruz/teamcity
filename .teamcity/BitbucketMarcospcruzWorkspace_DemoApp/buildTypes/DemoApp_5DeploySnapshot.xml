<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="c731aa06-40be-4501-947a-6e21d16f5213" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>5.Deploy Snapshot</name>
  <description />
  <settings>
    <disabled-settings>
      <setting-ref ref="RUNNER_31" />
      <setting-ref ref="RUNNER_47" />
    </disabled-settings>
    <parameters />
    <build-runners>
      <runner id="RUNNER_25" name="mvn deploy" type="Maven2">
        <conditions>
          <contains name="teamcity.build.branch" value="feature" />
          <does-not-contain name="teamcity.build.branch" value="master" />
        </conditions>
        <parameters>
          <param name="goals" value="deploy" />
          <param name="localRepoScope" value="agent" />
          <param name="maven.path" value="%teamcity.tool.maven.DEFAULT%" />
          <param name="pomLocation" value="pom.xml" />
          <param name="runnerArgs" value="-DskipTests" />
          <param name="target.jdk.home" value="%env.JDK_17_0_ARM64%" />
          <param name="teamcity.coverage.emma.include.source" value="true" />
          <param name="teamcity.coverage.emma.instr.parameters" value="-ix -*Test*" />
          <param name="teamcity.coverage.idea.includePatterns" value="*" />
          <param name="teamcity.coverage.jacoco.patterns" value="+:*" />
          <param name="teamcity.step.mode" value="default" />
          <param name="teamcity.tool.jacoco" value="%teamcity.tool.jacoco.DEFAULT%" />
          <param name="userSettingsSelection" value="settings.xml" />
        </parameters>
      </runner>
      <runner id="RUNNER_31" name="create release support" type="simpleRunner">
        <conditions>
          <contains name="teamcity.build.branch" value="develop" />
        </conditions>
        <parameters>
          <param name="script.content"><![CDATA[git remote set-url origin https://marcospcruz:%bitbucket-token%@bitbucket.org/marcospcruz/demo-app.git
git remote -v
git fetch --verbose
ls -la
git checkout -b uat
git push origin uat]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_47" name="delete temporary branches" type="simpleRunner">
        <conditions>
          <contains name="teamcity.build.branch" value="develop" />
          <does-not-contain name="teamcity.build.branch" value="master" />
        </conditions>
        <parameters>
          <param name="script.content"><![CDATA[git remote set-url origin https://marcospcruz:%bitbucket-token%@bitbucket.org/marcospcruz/demo-app.git
git remote -v
git fetch --verbose
PREVIOUS_BRANCH="$(git log --oneline|grep Merged|head -1|sed -r 's/(.+)((feature|bugfix)\/\w+)(.+)/\2/g')"
git checkout develop 
git pull origin
git rebase $PREVIOUS_BRANCH
git push origin --delete $PREVIOUS_BRANCH]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="DemoApp_FeatureBugfix" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="TRIGGER_13" type="vcsTrigger">
        <parameters>
          <param name="branchFilter"><![CDATA[-:<default>
-:refs/heads/master
+:*]]></param>
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <build-extensions>
      <extension id="perfmon" type="perfmon">
        <parameters>
          <param name="teamcity.perfmon.feature.enabled" value="true" />
        </parameters>
      </extension>
    </build-extensions>
    <dependencies>
      <depend-on sourceBuildTypeId="DemoApp_2UnitTest">
        <options>
          <option name="run-build-if-dependency-failed" value="CANCEL" />
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
      <depend-on sourceBuildTypeId="DemoApp_3IntegrationTests">
        <options>
          <option name="run-build-if-dependency-failed" value="CANCEL" />
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

